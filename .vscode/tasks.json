{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "c++ build and run(g++)",
            "command": "g++ -Wl,--stack=536870912 -D_KAFM_ -lm -x c++ --std=c++17 -g -o ${fileDirname}\\${fileBasenameNoExtension}.exe ${file} && ${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "c++ build(g++)",
            "command": "g++",
            "args": [
                "-Wl,--stack=536870912",
                "-static",
                "-D_KAFM_",
                "-lm",
                "-x",
                "c++",
                "--std=c++17",
                "-g",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "c++ run",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}